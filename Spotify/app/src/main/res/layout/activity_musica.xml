<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Musica">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="335dp"
        android:layout_height="167dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/nombreCancion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/black" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="389dp"
        android:layout_height="88dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.974">

        <Button
            android:id="@+id/prev"
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            app:icon="@drawable/ic_baseline_skip_previous_48"
            app:iconGravity="textEnd" />

        <Button
            android:id="@+id/stop"
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            app:icon="@drawable/ic_baseline_stop_48"
            app:iconGravity="textEnd" />

        <Button
            android:id="@+id/play"
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            app:icon="@drawable/ic_baseline_play_circle_filled_48"
            app:iconGravity="textEnd" />

        <Button
            android:id="@+id/next"
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            app:icon="@drawable/ic_baseline_skip_next_48"
            app:iconGravity="textEnd" />
    </LinearLayout>

    <TextView
        android:id="@+id/nombreCancion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.767" />
</androidx.constraintlayout.widget.ConstraintLayout>